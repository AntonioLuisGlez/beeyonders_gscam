<launch>
  <!-- This launchfile should bring up a node that broadcasts a ros image
       transport on /v4l/camera/image_raw -->

  <arg name="DEVICE" default="IR_camera"/>
  <arg name="PUBLISH_FRAME" default="false"/>

  <node ns="RTP_1" name="RTP_to_ros_1" pkg="gscam" type="gscam" output="screen">
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="package://gscam/examples/uncalibrated_parameters.ini"/>
    <param name="frame_id" value="/RTP_frame"/>
    <param name="sync_sink" value="false"/>
    <param name="use_h265" value="false"/> <!--Select between h264 decoder (False) or h265 decoder (True) -->
    <param name="RTP_port" value="5000"/> <!--Select RTP port -->
  </node>

  <node ns="RTP_2" name="RTP_to_ros_2" pkg="gscam" type="gscam" output="screen">
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="package://gscam/examples/uncalibrated_parameters.ini"/>
    <param name="frame_id" value="/RTP_frame"/>
    <param name="sync_sink" value="false"/>
    <param name="use_h265" value="true"/> <!--Select between h264 decoder (False) or h265 decoder (True) -->
    <param name="RTP_port" value="5001"/> <!--Select RTP port -->
  </node>

  <node if="$(arg PUBLISH_FRAME)" name="v4l_transform" pkg="tf" type="static_transform_publisher" args="1 2 3 0 -3.141 0 /world /v4l_frame 10"/>
</launch>
